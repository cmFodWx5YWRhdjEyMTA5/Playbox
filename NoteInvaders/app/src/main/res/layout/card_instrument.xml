<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginEnd="-56dp"
                android:layout_marginRight="-56dp"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textSize="@dimen/songs_count" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:elevation="2dp"
                android:focusable="true"
                android:src="@drawable/ic_baseline_mic_24px"
                android:tint="@android:color/white"
                android:visibility="invisible"
                card_view:fabSize="mini" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_card2"
                android:src="@drawable/ic_baseline_mic_24px"
                android:elevation="2dp"
                card_view:fabSize="mini"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_card1"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="invisible" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_card3"
                android:src="@drawable/ic_baseline_mic_24px"
                android:elevation="2dp"
                card_view:fabSize="mini"
                android:tint="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_card2"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/score_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentRight="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="80"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100"/>

            <TextView
                android:id="@+id/progress_text"
                android:text="80%"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentRight="true"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
