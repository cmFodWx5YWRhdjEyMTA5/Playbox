<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="@string/loading_match_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/resume_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@android:drawable/ic_media_play"
            android:text="@string/resume_match"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/item_image"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/matchCompletedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resume_button"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/match_completed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchCompletedText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:text="subtitle here"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/primaryTextColor" />

        <FrameLayout
            android:id="@+id/scoreSummaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_detail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/moreLessLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreSummaryLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">


            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_baseline_delete_forever_24px"
                android:text="@string/btn_delete"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/moreLessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24px"
                android:text="@string/btn_more"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalPointsText_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/total_points"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintEnd_toStartOf="@+id/breakPointsText_teamOne"
                app:layout_constraintTop_toBottomOf="@+id/moreLessButton" />

            <TextView
                android:id="@+id/totalPointsText_teamOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/display_love"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teamOneColor"
                app:layout_constraintBottom_toBottomOf="@+id/totalPointsText_title"
                app:layout_constraintEnd_toEndOf="@+id/breakPointsText_teamOne"
                app:layout_constraintTop_toTopOf="@+id/totalPointsText_title" />

            <TextView
                android:id="@+id/totalPointsText_teamTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/display_love"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teamTwoColor"
                app:layout_constraintBottom_toBottomOf="@+id/totalPointsText_title"
                app:layout_constraintStart_toStartOf="@+id/breakPointsText_teamTwo"
                app:layout_constraintTop_toTopOf="@+id/totalPointsText_title" />

            <View
                android:id="@+id/totalPoints_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/colorSecondary"
                app:layout_constraintEnd_toEndOf="@+id/breakPoints_divider"
                app:layout_constraintStart_toStartOf="@+id/breakPoints_divider"
                app:layout_constraintTop_toBottomOf="@+id/totalPointsText_title" />

            <TextView
                android:id="@+id/breakPointsText_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/break_points"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintEnd_toStartOf="@+id/breakPointsText_teamOne"
                app:layout_constraintTop_toBottomOf="@+id/totalPoints_divider" />

            <TextView
                android:id="@+id/breakPointsText_teamOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/default_final_set_target"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teamOneColor"
                app:layout_constraintBottom_toBottomOf="@+id/breakPointsText_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/breakPointsText_title" />

            <TextView
                android:id="@+id/breakPointsText_teamTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/default_final_set_target"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/teamTwoColor"
                app:layout_constraintBottom_toBottomOf="@+id/breakPointsText_title"
                app:layout_constraintStart_toEndOf="@+id/breakPointsText_teamOne"
                app:layout_constraintTop_toTopOf="@+id/breakPointsText_title" />

            <View
                android:id="@+id/breakPoints_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/colorSecondary"
                app:layout_constraintEnd_toEndOf="@+id/breakPointsText_teamTwo"
                app:layout_constraintStart_toStartOf="@+id/breakPointsText_title"
                app:layout_constraintTop_toBottomOf="@+id/breakPointsText_title" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>