        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teamOne_setThree"
        app:layout_constraintTop_toBottomOf="@+id/textViewSet4Title" />

    <uk.co.darkerwaters.scorepal.activities.fragments.ResizeTextView
        android:id="@+id/teamOne_setFive"
        android:layout_width="0dp"
