            android:layout_marginStart="8dp"
            android:text="@string/default_final_set_target"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/teamTwoColor"
            app:layout_constraintBottom_toBottomOf="@+id/breakPointsText_title"
            app:layout_constraintStart_toEndOf="@+id/breakPointsText_teamOne"
            app:layout_constraintTop_toTopOf="@+id/breakPointsText_title" />

        <View
            android:id="@+id/breakPoints_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="@+id/breakPointsText_teamTwo"
            app:layout_constraintStart_toStartOf="@+id/breakPointsText_title"
            app:layout_constraintTop_toBottomOf="@+id/breakPointsText_title" />

