        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teamOne_setFour"
        app:layout_constraintTop_toBottomOf="@+id/textViewSet5Title" />

    <TextView
        android:id="@+id/tieBreak_setOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="@string/tie_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/teamOne_setOne"
        app:layout_constraintStart_toStartOf="@+id/teamOne_setOne"
        app:layout_constraintTop_toBottomOf="@+id/teamOne_setOne" />

    <TextView
        android:id="@+id/tieBreak_setTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="@string/tie_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/teamOne_setTwo"
        app:layout_constraintStart_toStartOf="@+id/teamOne_setTwo"
        app:layout_constraintTop_toBottomOf="@+id/teamOne_setTwo" />

    <TextView
        android:id="@+id/tieBreak_setThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="@string/tie_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/teamOne_setThree"
        app:layout_constraintStart_toStartOf="@+id/teamOne_setThree"
        app:layout_constraintTop_toBottomOf="@+id/teamOne_setThree" />

    <TextView
        android:id="@+id/tieBreak_setFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="@string/tie_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/teamOne_setFour"
        app:layout_constraintStart_toStartOf="@+id/teamOne_setFour"
        app:layout_constraintTop_toBottomOf="@+id/teamOne_setFour" />

    <TextView
        android:id="@+id/tieBreak_setFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="@string/tie_example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryTextColor"
