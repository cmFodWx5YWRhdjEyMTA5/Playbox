        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/teamOne_setFour"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teamOne_setTwo"
        app:layout_constraintTop_toBottomOf="@+id/textViewSet3Title" />

    <uk.co.darkerwaters.scorepal.activities.fragments.ResizeTextView
        android:id="@+id/teamOne_setFour"
